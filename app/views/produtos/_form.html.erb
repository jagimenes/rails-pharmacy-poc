<%= simple_form_for(@produto) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :descricao %>
    <%= f.input :observacoes %>
    <%= f.input :maximo %>
    <%= f.association :unidade, label_method: :unidade, :label => "Em", :input_html => {} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
